MONGODB_URI=mongodb://localhost:27017/cyberpit

# Server Configuration
PORT=5001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
